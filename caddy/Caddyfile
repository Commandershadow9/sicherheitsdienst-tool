# Fallback ohne Domain: HTTP auf Port 80
:80 {
  route /api/* {
    reverse_proxy api:3001
  }

  route /ai/* {
    basicauth /* {
      admin $2a$14$CJ2D./KdNH3vQuccbVpKheYqJGIgS/M1pxl/SbPCLUklI8TPAJQG.
    }
    uri strip_prefix /ai
    reverse_proxy openwebui:8080
  }

  root * /srv/www
  try_files {path} /index.html
  file_server
}
